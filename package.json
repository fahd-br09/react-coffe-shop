{
  "name": "coffee-shop-mern",
  "version": "1.0.0",
  "description": "A full-stack coffee shop web application built with MERN stack",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "demo": "concurrently \"npm run server-demo\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "server-demo": "cd server && npm run demo",
    "client": "cd client && npm start",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "seed": "cd server && npm run seed"
  },
  "keywords": [
    "coffee",
    "shop",
    "mern",
    "react",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
